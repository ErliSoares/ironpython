<Window
	xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
	xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
	x:Name="Window"
	Title="Welcome to IronPython"
	Width="450" Height="Auto" SnapsToDevicePixels="True" 
	BorderThickness="5,5,5,5" Margin="15,15,15,15" 
	SizeToContent="Height" WindowStyle="ThreeDBorderWindow">

	<Grid x:Name="LayoutRoot" HorizontalAlignment="Stretch" 
	Margin="20,20,20,20" Width="Auto" Height="Auto">
		<Button HorizontalAlignment="Stretch" 
		Margin="43,23,53,0" x:Name="button" 
		VerticalAlignment="Top" Height="72" 
		Content="Push Me">
			<Button.BitmapEffect>
				<DropShadowBitmapEffect Color="#FF1A1010" 
				Noise="0.5" ShadowDepth="20" Softness="0.48"/>
			</Button.BitmapEffect>
		</Button>
	</Grid>
</Window>